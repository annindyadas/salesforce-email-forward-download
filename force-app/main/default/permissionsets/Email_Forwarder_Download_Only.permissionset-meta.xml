<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <customPermissions>
        <enabled>true</enabled>
        <name>Allow_Email_Download</name>
    </customPermissions>
    <classAccesses>
        <apexClass>EmailForwarder</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>EmailForwarderTest</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <description>Download-only access to Email Forwarder features - allows downloading emails but not forwarding. Recommended for standard users who need email archival capabilities.</description>
    <flowAccesses>
        <enabled>true</enabled>
        <flow>Download_Email</flow>
    </flowAccesses>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Email Forwarder Download Only</label>
</PermissionSet>
